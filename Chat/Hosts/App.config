<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>


  <system.serviceModel>
    <services>
      <service name="Chat_servis_library.IChat_servis" behaviorConfiguration="mexBehavior">


        <endpoint address="Chat_servis"  binding="netTcpBinding" contract="Chat_servis_library.IChat_servis"></endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"></endpoint>


        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8301/"/>
            <add baseAddress="net.tcp://localhost:8303/"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehavior" >
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>